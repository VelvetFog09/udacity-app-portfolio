<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="My Nanodegree Apps" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myNdApps"
        android:layout_centerHorizontal="true"
        style="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/spotifyStreamer"
        android:layout_below="@+id/myNdApps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:width="180dp"
        android:textSize="12sp"
        android:background="#F08C35" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/scoresApp"
        android:layout_below="@+id/spotifyStreamer"
        android:layout_alignRight="@+id/spotifyStreamer"
        android:layout_alignEnd="@+id/spotifyStreamer"
        android:layout_marginTop="10dp"
        android:width="180dp"
        android:textSize="12sp"
        android:background="#F08C35" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/libraryApp"
        android:layout_below="@+id/scoresApp"
        android:layout_alignLeft="@+id/scoresApp"
        android:layout_alignStart="@+id/scoresApp"
        android:layout_marginTop="10dp"
        android:width="180dp"
        android:textSize="12sp"
        android:background="#F08C35" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/buildItBigger"
        android:layout_below="@+id/libraryApp"
        android:layout_alignLeft="@+id/libraryApp"
        android:layout_alignStart="@+id/libraryApp"
        android:layout_marginTop="10dp"
        android:width="180dp"
        android:textSize="12sp"
        android:background="#F08C35" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/xyzReader"
        android:layout_below="@+id/buildItBigger"
        android:layout_alignLeft="@+id/buildItBigger"
        android:layout_alignStart="@+id/buildItBigger"
        android:layout_marginTop="10dp"
        android:width="180dp"
        android:textSize="12sp"
        android:background="#F08C35" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/capstoneApp"
        android:layout_below="@+id/xyzReader"
        android:layout_alignLeft="@+id/xyzReader"
        android:layout_alignStart="@+id/xyzReader"
        android:layout_marginTop="10dp"
        android:width="180dp"
        android:textSize="12sp"
        android:background="#14b4ac" />
</RelativeLayout>
